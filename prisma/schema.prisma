generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id           Int           @id @default(autoincrement())
  chatId       Int
  natalCards   NatalCards[]
  CountReports CountReports?
  User         User[]
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  birthDate  String
  birthTime  String
  birthPlace String
  chat       Chat        @relation(fields: [chatId], references: [id])
  chatId     Int
  NatalCards NatalCards?
  createdAt  DateTime    @default(now())
}

model NatalCards {
  id     Int    @id @default(autoincrement())
  chatId Int
  chat   Chat   @relation(fields: [chatId], references: [id])
  text   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

model CountReports {
  id             Int  @id @default(autoincrement())
  chatId         Int  @unique
  chat           Chat @relation(fields: [chatId], references: [id])
  countReportDay Int
  dayLimit       Int
  payedLimit     Int  @default(0)
}
